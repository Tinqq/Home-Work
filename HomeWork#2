//1.Вік людини
Console.WriteLine("Input your Age: ");
byte yourAge = byte.Parse(Console.ReadLine());
Console.WriteLine("Your Age is: " + yourAge);


//2.Банківський рахунок з лімітом від -1 000 000 000 000 до 1 000 000 000 000 грн
Console.WriteLine("How many you want to deposit into our company (from -1 000 000 000 000 to 1 000 000 000 000) : ");
double.deposite = double.Parse(Console.ReadLine());
Console.WriteLine("Value of your deposite is : " + deposite);


//3.Літера
Console.WriteLine("Input any letter to create security password of your account (any one symbol): ");

try
{

    char charpass = char.Parse(Console.ReadLine());
    Console.WriteLine("You password will be: " + charpass);
}
catch (Exception)
{
    Console.WriteLine("Incorrect Symbol");
}


//4.SMS повідомлення: `Hello World`
string hello = "Hello World!";
Console.WriteLine(hello);


//5.Дати оцінку твердженню: "Сусід сказав, що людина може жити 1000 років". (Правда\Брехня, вмістити в 1 байт)
